<!DOCTYPE html>

<html lang="@ViewBag.Lang">

<head>

    <!-- Meta data -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible"  content="IE=edge" />
    <meta name="viewport"               content="width=device-width,height=device-height, minimum-scale=1.0, maximum-scale=1.0" />
    <meta name="description"            content="BOPACK Bussiness - Partnership" />
    <!-- Meta OG -->
    @Html.Partial("_MetaOG", ViewBag as object)
    <!-- ./Meta OG -->
    <!-- ./Meta data -->

    <!-- Titre de la page -->
    <title>@ViewBag.Titre</title>
    <!-- /itre de la page -->

    <!-- Style à appliquer sur la page -->
    <!-- icon de la page -->
    <link href="@Url.Content("~/favicon.ico")"                                                                                                                      type="image/ico" rel="shortcut icon" />
    <!-- 1. -->
    <link href="@Url.Content("~/Resources/css/comingsoon.css")"                                                                                         media="all" type="text/css" rel="stylesheet" />
    <!-- 2. BOPACK Style -->
    <link href="@Url.Content("~/Resources/css/bpstyle.css")"                                                                                                        type="text/css" rel="stylesheet" />
    <!-- /tyle à appliquer sur la page -->

</head>

<body id="Body" style="font-family: 'Titillium Web';">

    <!-- Corps de la page -->
    @RenderBody()
    <!-- ./Corps de la page -->

    <!-- Cookie page -->
    @Html.Partial("_Cookies")
    <!-- /.Cookie page -->

    <!-- _Modals -->
    @Html.Partial("_Modals")
    <!-- /._Modals -->

    <!-- Script à appliquer sur la page -->
    <!-- 1. -->
    <script src="@Url.Content("~/Scripts/comingsoon.js")"                                                                   type="text/javascript"></script>
    <!-- 2. -->
    <script src="@Url.Content("~/Scripts/comingsoon.2.js")"                                                                 type="text/javascript"></script>
    <!-- 3. -->
    <script src="@Url.Content("~/Resources/Portals/_default/Skins/20067-UnlimitedColorsPack-049/scripts/comingsoon.js")"    type="text/javascript"></script>
    <!-- 4. -->
    @*
    <script src="@Url.Content("~/Scripts/Shared/scripts/initWidgets.js")"                                                   type="text/javascript"></script>
    *@
    <!-- 1. Bopack Script -->
    <script src="@Url.Content("~/Scripts/bopackscript.js")"                                                                 type="text/javascript"></script>
    <!-- /cript à appliquer sur la page -->

    <!-- Script imbriqué dans la page -->
    @RenderSection("scripts", required: false)
    <!-- ./Script imbriqué dans la page -->

</body>

</html>
